<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
</head>
<body>
  <%= render 'layouts/header' %>
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
    <%= yield %>
    <% debug(session) if Rails.env.development? %>
    <% debug(params) if Rails.env.development? %>
  </div>

  <% if signed_in? %>
    <%= render 'layouts/subscription' %>
    <button id="chat-popup-button" class="btn btn-info">聊天</button>
    <div id="chat-box">
      <div id="chat-header">
        <a href="#" id="chat-close"><i class="icon-remove"></i></a>
      </div> 
      <div id="chat-wrap">
        <div id="chat-left"></div>
        <div id="chat-right"></div>
      </div>
    </div>
  <% end %>
</body>
</html>
