<%=@room[:outline] %>
<% if @room.user == current_user && current_teacher?%>
<%= link_to "添加或者删除学生", edit_user_room_path(current_user,@room)%>
<%= render 'delete_room', room: @room%>
<% end%>

<% if current_student? && current_user.my_rooms.include?(@room)%>
<%= render 'quit_room', room: @room%>
<% end%>

<%=link_to "老师:#{@room.user[:name]}",user_path(@room.user[:id])%>
<div>学生</div>
<% @students.each do |student|%>
  <%=link_to student[:name], user_path(student[:id])%>
<% end%>
<div id="chatroom-dialogue-list">
</div>
<div>
  <button onclick="clearAndUpdate()">clear</button>
</div>
<canvas id="chatroom-canvas" draggable="false" width="500" height="500">
</canvas
<div id="chatroom-sendbox">
  <%= form_for Message.new do |f| %>
    <%= f.hidden_field :room_id, value: @room.id%>
    <%= f.text_area :content %>
    <%= f.submit "发送", id: "chatroom-sendbutton" %>
  <% end %>
</div>
