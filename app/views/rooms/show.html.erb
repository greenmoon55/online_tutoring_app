<%=@room[:outline] %>

<%=link_to "老师",user_path(@user[:id])%>
<% if current_user?(@user) && current_teacher?%>
  <%= render 'delete_room', room: @room%>
<% end%>
<div>学生</div>
<% @students.each do |student|%>
  <%=link_to student[:name], user_path(student[:id])%>
<% end%>
<div id="chatroom-dialogue-list">
</div>
<div id="chatroom-sendbox">
  <%= form_for Message.new do |f| %>
    <%= f.hidden_field :room_id, value: @room.id%>
    <%= f.text_area :content %>
    <%= f.submit "发送", id: "chatroom-sendbutton" %>
  <% end %>
</div>
