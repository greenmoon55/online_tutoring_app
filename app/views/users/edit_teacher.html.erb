<% provide(:title, t("user.edit")) %>
<div class="info_container">
  <div class="page">
    <%= render 'shared/error_messages', object: @user %>
    <div class="info_left" style="border:none;">
	    <%= form_for(@user) do |f| %>
        <table>
          <tr>
            <td><%= f.label :name %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><%= f.label :gender %></td>
            <td> <%= f.select :gender, [['男', 1],['女', 0]], include_blank: true %></td>
          </tr>
          <tr>
            <td><%= f.label :degree_id %></td>
            <td><%= f.select :degree_id, degrees, include_blank: true %></td>
          </tr>
          <tr>
            <td><%= f.label :district_id %></td>
            <td><%= f.select :district_id, districts, include_blank: true %></td>
          </tr>
          <tr>
            <td><%= f.label :teacher_visible %></td>
            <td><%= f.check_box :teacher_visible %>想让其他用户通过搜索老师找到我</td>
          </tr>
          <tr>
            <td><%= f.label :description %></td>
            <td><%= f.text_area :description, {style: "width:auto;height:100px;"}%></td>
          </tr>
          <tr>
            <td><%= f.label :video_id %></td>
            <td><%= f.text_field :video_id %>当前仅支持优酷</td>
          </tr>
          <tr>
            <td><%= f.label "想讲授的科目" %></td>
            <td>
              <div class="choicebox" style="font-size:14px;">
                <% Subject.all.each do |subject| %>
                  <div class="choice_cell">
                    <label>
                      <%= check_box_tag("user[teacher_subject_ids][]", subject.id, @user.teacher_subject_ids.include?(subject.id)) %>
                      <%= subject.name %>
                    </label>
                    <%= hidden_field_tag "user[teacher_subject_ids][]" %>
                  </div>
                <% end %>
              </div>
              <div id="clear"/>
            </td>
          </tr>
        </table>
        <%= f.submit t("common.update"), class: "btn btn_edit" %>
      <% end %>
    </div>
    <%= render 'edit_right' %>
    <%= form_tag(full_role_user_path(@user), method: :post) do %>
  	  <%= submit_tag "我也想当学生", confirm: :"你确定吗？" unless current_user.full_role? %>
    <% end %>
  </div>
</div>
<div id="clear"/>
<script>
$("#chng_psw_cmd").click(function(){ 
 $("#psw_rng").show();
}); 
</script>
