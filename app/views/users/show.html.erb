<% provide(:title, @user.name) %>
<div class="info_container" style="border:none;">
  <div class="page" style="float:none;">
    <table>
      <tr>
        <td><label>在线状态：</label>
          <% if @user.online? %>
            <!-- 下面id用于聊天，请不要删除-->
            <img id="img_online" src="/assets/res/online.png" width="30" height="30"/>
          <% else %>
            <img src="/assets/res/offline.png" width="30" height="30"/>
          <% end %>
        </td>
        <% if signed_in? && !current_user?(@user) %>
          <td>
            <button class="btn" id="chat-with-button">聊天</button>
          </td>
        <% end %>
		
		        <!-- 下面id用于聊天，请不要删除-->
        <td>
          <h1 id="username"><%= @user.name %></h1>
        </td>
        <% if signed_in? %>
          <%= render "shared/request_form", :user => @user %>
        <% end %>
       
        <% if signed_in? && current_user?(@user) %>
          <td>
            <%= link_to "编辑资料", edit_user_path(@user), class: "btn_edit" %>
          </td>
        <% end %>
      </tr>
    </table>
    <div class="info_left">
      <h6>个人信息</h6>
      <ul>
        <li>是否空闲：是</li>
        <li>性别：<%= gender(@user) %> </li>
        <% if @user.district %>
          <li>地区：<%= @user.district.name %></li>
        <% end %>
        <% if @user.degree %>
          <li>学历：<%= @user.degree.name %></li>
        <% end %>
        <li>身份：<%= role(@user) %> </li>
      </ul>
	  
      <% if @user.is_student? %>
        <h6>想要学习的科目</h6>
        <div class="course">
          <ul>
            <% @user.student_subjects.each do |subject| %>
              <li><%= subject.name %></li>
            <% end %>
            <div id="clear"/>
          </ul>
        </div>
	    <% end %>
	  
      <% if @user.is_teacher? %>
        <h6>想要讲授的科目</h6>
        <div class="course">
          <ul>
            <% @user.teacher_subjects.each do |subject| %>
              <li><%= subject.name %></li>
            <% end %>
            <div id="clear"/>
          </ul>
        </div>
      <% end %>
	  
      <h6>视频</h6>
      <img src="/assets/res/video.png"/>
    </div>
    <div class="info_right">
    <img src="/assets/res/head.png" width="200" height="200"/>
      <h6>自我描述</h6>
      <p><%= @user.description%></p>
      <h6>评价</h6>
      <div class="comment"> <a href="#">某人</a>:
        <p>评价</p>
      </div>
      <div class="comment"> <a href="#">某人</a>:
        <p>评价</p>
      </div>
       <a href="#">浏览评价记录</a>
    </div>
   
    <div id="clear"/>
  </div>
</div>
<div id="clear"/>
