<%= form_for(@user) do |f| %>
  <%= f.label :current_password %>
  <%= f.password_field :current_password %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  
  <br/>
  <%= f.submit "修改密码", class: "btn btn-primary" %>
<% end %>
