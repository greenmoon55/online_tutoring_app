<% provide(:title, "编辑个人资料") %>
<div class="row">
  <div class="span6">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :gender %>
      <%= f.select :gender, [['男', 1],['女', 0]], include_blank: true %>

      <%= f.label :district_id %>
      <%= f.select :district_id, @districts, include_blank: true %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :visible %>
      <%= f.check_box :visible %>

      <%= f.submit t("common.register"), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
  <div class="span6">
    <%= form_for(@user) do |f| %>
      <%= f.label :current_password %>
      <%= f.password_field :current_password %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.submit "修改密码", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
