<% provide(:title, "搜索 #{@content}") %>
<h1>搜索</h1>

<div class="row">
  <div class="span8">
    <%= form_tag(search_contents_path, :method=>'post', :multipart => true) do  %>
    <div class = "container-fluid">
    <div class ="row-fluid">
      <div class="span3">
      <p>性别</p>
      <div class="role-select">
        <%= radio_button_tag :gender, 2,@gender_number == 2 %>
        <%= label_tag :gender_both, "都可" %>
        <%= radio_button_tag :gender, 1,@gender_number == 1 %>
        <%= label_tag :gender_male, "男" %> 
        <%= radio_button_tag :gender, 0,@gender_number == 0 %>
        <%= label_tag :gender_female, "女" %>
      </div>
      <p>身份</p>
      <div class="role-select">
        <%= radio_button_tag :role, 1,@role_number == 1 %>
        <%= label_tag  "学生" %>
        <%= radio_button_tag :role, 0,@role_number == 0 %>
        <%= label_tag  "老师" %> 
      </div>

      <p>学位</p>
      <div class="role-select">
        <% @degrees.each do |degree| %>
          <%= check_box_tag 'degree[]', degree[:id],degree[:checked] %>
          <%= label_tag degree[:name] %>
        <% end %>
      </div>


      <p>地区</p>
      <div class="role-select">
        <% @districts.each do |district| %>
          <%= check_box_tag 'district[]', district[:id],district[:checked] %>
          <%= label_tag district[:name] %>
        <% end %>
      </div>

      <p>科目</p>
      <div class="role-select">
        <% @subjects.each do |subject| %>
          <%= check_box_tag 'subject[]', subject[:id],subject[:checked] %>
          <%= label_tag subject[:name] %>
        <% end %>
      </div>
    </div>
    <div class = "span7 offset2">
      <%= text_field_tag :content, @content,class: "input-large search-query" %>
      <%= submit_tag "搜索", class: "btn" %>
       <ul class="users">
        <% if @users %>
          <%= @users.count %>
          <% @users.each do |user| %>
            <li>
              <%= link_to image_tag("user.png",:border => 0,:alt => '', :title=>''),user %>
              <%= link_to  user.name,user%>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
    </div>
    </div>
    <% end %>   
       
  </div>
</div>



